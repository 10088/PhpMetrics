{
    "includes": [
        "src/Hal/Component"
    ],
    "excludes": [
    ],
    "extensions": [
        "php",
        "php8"
    ],
    "report": {
        "html": "/tmp/report/",
        "csv": "/tmp/report.csv",
        "json": "/tmp/report.json",
        "violations": "/tmp/violations.xml"
    },
    "groups": [

        {
            "name": "Application",
            "match": "!application!i"
        }
    ],
    "plugins": {
        "git": {
            "binary": "git"
        },
        "junit": {
            "file": "/tmp/junit.xml"
        }
    }
}
